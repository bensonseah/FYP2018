@{
    ViewBag.Title = "New Shirt Order";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-7">
        <form asp-controller="ShirtOrder" asp-action="Create" method="post" class="form-horizontal" role="form">
            <div class="form-horizontal">
                <div class="form-group">
                    @{ // Bind the label and input to the property Name
                    }
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-6">
                        <input class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    @{ // Bind the label and inputs to the propery Color
                    }
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-8">
                        <input type="radio" value="white" checked="checked" /> White
                        <input type="radio" value="crimson" /> Crimson
                        <input type="radio" value="khaki" /> Khaki
                        <input type="radio" value="linen" /> Linen
                    </div>
                </div>
                <div class="form-group">
                    @{ // Bind the label and input to the propery Price
                    }
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-6">
                        <input class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    @{ // Bind the label and input to the propery PokedexId
                    }
                    <label class="col-sm-4 control-label">Pokedex</label>
                    <div class="col-sm-6">
                        <select class="form-control col-sm-6"
                                asp-items="@((SelectList)ViewData["pokes"])">
                            <option value="">-- SELECT --</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    @{ // Bind the label and input to the propery FrontPosition
                    }
                    <label class="col-sm-4 control-label">Logo Position (Front)</label>
                    <div class="col-sm-7">
                        <input type="radio" value="0" checked="checked" /> Left
                        <input type="radio" value="1" /> Right
                    </div>
                </div>
                <div class="form-group">
                    @{ // Bind the label and input to the propery Qty
                    }
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-6">
                        <input class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>
